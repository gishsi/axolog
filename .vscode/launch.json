    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'axolog'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=axolog",
                    "--package=axolog"
                ],
                "filter": {
                    "name": "axolog",
                    "kind": "bin"
                }
            },
            "args": ["--path-to-file", "D:\\dev\\axolog\\example_logs\\example_1.log", "--path-to-save",  "D:\\dev\\axolog\\output\\ex1.log"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'axolog'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=axolog",
                    "--package=axolog"
                ],
                "filter": {
                    "name": "axolog",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}